    <section class="main-page-description justify-content-between">
        <div class="container">
            <div class="row">
                <div class="col-md-7 image-grid">
                    <div class="row">
                        <% for (let i = 1; i <= 4; i++) { %>
                            <div class="col-md-6 mb-3">
                                <img src="../assets/shoe-catalogue/images/products/<%= item.id %>/small/shoe.jpg" alt="Image <%= i %>" class="img-fluid">
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-5">
                    <h1><%= item.model %></h1>
                    <h4><%= item.design %></h4>
                    <p>Price: <%= item.price %> GBP</p>
                    <p id="item_id" data-id="<%= item.id %>">ID: <%= item.id %></p>
                    <p>Description: <%= item.description %></p>
                    <hr>
                    <label for="size">Select Size:</label>
                    <select class="form-control mb-3" id="size">
                        <% const sizes = ["Size 7", "Size 8", "Size 9"]; %>
                        <% sizes.forEach((size) => { %>
                            <option><%= size %></option>
                        <% }); %>
                    </select>
                    <div class="d-flex align-items-center mb-3 quantity-selector">
                        <div class="input-group">
                            <input type="number" id="quantity" class="form-control" value="1">
                        </div>
                        <button class="btn btn-primary ml-2">Add to Cart</button>
                    </div>

                </div>
            </div>
        </div>
    </section>
